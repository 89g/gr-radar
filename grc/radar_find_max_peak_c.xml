<block>
  <name>Find Max Peak</name>
  <key>radar_find_max_peak_c</key>
  <category>RADAR</category>
  <import>import radar</import>
  <make>radar.find_max_peak_c($samp_rate, $threshold, $len_key)</make>
  <callback>set_threshold($threshold)</callback>
  <param>
    <name>Sample rate</name>
    <key>samp_rate</key>
    <type>int</type>
  </param>
  <param>
    <name>Threshold [dB]</name>
    <key>threshold</key>
    <type>float</type>
  </param>
  <param>
    <name>Packet length key</name>
    <key>len_key</key>
    <type>string</type>
    <value>"packet_len"</value>
  </param>
  <sink>
    <name>IQ in</name>
    <type>complex</type>
  </sink>
  <source>
    <name>Msg out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
