<block>
  <name>USRP Echotimer</name>
  <key>radar_usrp_echotimer_cc</key>
  <category>RADAR</category>
  <import>import radar</import>
  <make>radar.usrp_echotimer_cc($samp_rate, $center_freq, $num_delay_samps, $channel_nums_tx, $channel_nums_rx, $args, $time_source, $clock_source, $wire, $wait, $timeout, $tx_subdev_spec, $rx_subdev_spec, $antenna_tx, $antenna_rx, $gain_tx, $gain_rx, $len_key)</make>
  <callback>set_num_delay_samps($num_delay_samps)</callback>
  <param>
    <name>Sample rate</name>
    <key>samp_rate</key>
    <type>int</type>
  </param>
  <param>
    <name>Center frequency</name>
    <key>center_freq</key>
    <type>float</type>
  </param>
  <param>
    <name>Number delay samples</name>
    <key>num_delay_samps</key>
    <value>0</value>
    <type>int</type>
  </param>
  <param>
    <name>TX channel numbers</name>
    <key>channel_nums_tx</key>
    <value>0,</value>
    <type>real_vector</type>
    <hide>part</hide>
  </param>
  <param>
    <name>RX channel numbers</name>
    <key>channel_nums_rx</key>
    <value>0,</value>
    <type>real_vector</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Arguments</name>
    <key>args</key>
    <value>"addr0=192.168.xx.xx, addr1=192.168.xx.xx"</value>
    <type>string</type>
  </param>
  <param>
    <name>Wire</name>
    <key>wire</key>
    <value>('','')</value>
    <type>raw</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Clock source</name>
    <key>clock_source</key>
    <value>('internal','mimo')</value>
    <type>raw</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Time source</name>
    <key>time_source</key>
    <value>('none','mimo')</value>
    <type>raw</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Wait</name>
    <key>wait</key>
    <value>0.1, 0.1</value>
    <type>real_vector</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Timeout</name>
    <key>timeout</key>
    <value>1, 1</value>
    <type>real_vector</type>
    <hide>part</hide>
  </param>
  <param>
    <name>TX Subdevice Spec</name>
    <key>tx_subdev_spec</key>
    <type>raw</type>
    <hide>part</hide>
  </param>
  <param>
    <name>RX Subdevice Spec</name>
    <key>rx_subdev_spec</key>
    <type>raw</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Antenna TX</name>
    <key>antenna_tx</key>
    <type>raw</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Antenna RX</name>
    <key>antenna_rx</key>
    <type>raw</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Gain TX</name>
    <key>gain_tx</key>
    <type>real_vector</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Gain RX</name>
    <key>gain_rx</key>
    <type>real_vector</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Packet length key</name>
    <key>len_key</key>
    <value>"packet_len"</value>
    <type>string</type>
    <hide>part</hide>
  </param>
  <sink>
    <name>IQ in</name>
    <type>complex</type>
    <nports>len($channel_nums_tx)</nports>
  </sink>
  <source>
    <name>IQ out</name>
    <type>complex</type>
    <nports>len($channel_nums_rx)</nports>
  </source>
</block>
