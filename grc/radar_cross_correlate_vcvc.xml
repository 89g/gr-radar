<?xml version="1.0"?>
<block>
  <name>Cross correlate</name>
  <key>radar_cross_correlate_vcvc</key>
  <category>RADAR</category>
  <import>import radar</import>
  <make>radar.cross_correlate_vcvc($vlen)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Vector length</name>
    <key>vlen</key>
    <value>1</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>reference</name>
    <type>complex</type>
    <vlen>$vlen</vlen>
  </sink>

  <sink>
    <name>echo</name>
    <type>complex</type>
    <vlen>$vlen</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$vlen</vlen>
  </source>
</block>
