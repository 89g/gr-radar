<block>
  <name>QT GUI Spectrogram Plot</name>
  <key>radar_qtgui_spectrogram_plot</key>
  <category>RADAR</category>
  <import>import radar</import>
  <make>radar.qtgui_spectrogram_plot($vlen, $interval, $len_key)</make>
  <param>
    <name>Input vector length</name>
    <key>vlen</key>
    <type>int</type>
  </param>
  <param>
    <name>Update interval [ms]</name>
    <key>interval</key>
    <type>int</type>
  </param>
  <param>
    <name>Packet length key</name>
    <key>len_key</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>
  <sink>
    <name>IQ in</name>
    <type>float</type>
    <vlen>$vlen</vlen>
  </sink>
</block>
